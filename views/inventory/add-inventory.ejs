<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%# messages() %>
<form action="/inventory/detail" method="post">
    <label for="inv_make">Make:</label><br>
    <input type="text" id="make" name="inv_make" required value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Model:</label><br>
    <input type="text" id="model" name="inv_model" required value="<%= locals.inv_model %>"><br>
    <label for="inv_year">Year:</label><br>
    <input type="text" id="year" name="inv_year" required value="<%= locals.inv_year %>"><br>
    <label for="inv_desciption">Description:</label><br>
    <input type="text" id="description" name="inv_desciption" required value="<%= locals.inv_desciption %>"><br>
    <label for="inv_image">Image URL:</label><br>
    <input type="text" id="image" name="inv_image" required value="<%= locals.inv_image %>"><br>
    <label for="inv_thumbnail">Thumbnail URL:</label><br>
    <input type="text" id="thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>"><br>
    <label for="inv_price">Price:</label><br>
    <input type="number" id="price" name="inv_price" required value="<%= locals.inv_price %>"><br>
    <label for="inv_miles">Mileage:</label><br>
    <input type="number" id="miles" name="inv_miles" required value="<%= locals.inv_miles %>"><br>
    <label for="inv_color">Color:</label><br>
    <input type="text" id="color" name="inv_color" required value="<%= locals.inv_color %>"><br>
    <label for="classification_id">Classification Id:</label><br>
    <input list="classificationList">
    <datalist id="classificationList"><%- classificationList %></datalist><br>
    <input type="submit" value="Add">
</form>