<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <%# messages() %>
    <form>
    <label for="email">Email:</label><br>
    <input type="email" id="email" name="account_email" required><br>
    <label for="password">Password:</label><br>
    <input type="password" id="pass" name="account_passowrd" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br>
    <div>*Password requires 12 characters, 1 capital letter, 1 number, and 1 special character.*</div>
    <input type="submit" value="Login">
    </form>
    <p>No Account? <a href="/account/registration">Sign-up</a></p>