<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <%# messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    <form action="/account/registration" method="post">
    <label for="fname">First Name:</label><br>
    <input type="text" id="fname" name="account_firstname" required value="<%= locals.account_firstname %>"><br>
    <label for="lname">Last Name:</label><br>
    <input type="text" id="lname" name="account_lastname" required><br>
    <label for="email">Email:</label><br>
    <input type="email" id="email" name="account_email" required><br>
    <label for="password">Password:</label><br>
    <input type="password" id="pass" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"required><br>
    <input type="submit" value="Register">
    </form>
    <div>*Password requires 12 characters, 1 capital letter, 1 number, and 1 special character.*</div>